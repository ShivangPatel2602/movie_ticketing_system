<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div id="movies">
  <% @movies.each do |movie| %>
    <%= render movie %>
    <p>
      <%= link_to "Show this movie", movie %>
    </p>
  <% end %>
</div>

<% if current_admin %>
  <%= link_to "New movie", new_movie_path %>
<% end %>

<%= link_to "Back to Main Menu", root_path %>