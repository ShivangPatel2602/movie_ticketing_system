<%= form_with(model: show) do |form| %>
  <% if show.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
        <% show.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <%= form.label :movie_id, "Select Movie" %>
  <%= form.collection_select :movie_id, @movies, :id, :title, { prompt: "Select a Movie", selected: @selected_movie&.id }, class: "form-control" %>
  </div>

  
  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :time, style: "display: block" %>
    <%= form.time_field :time %>
  </div>

  <div>
    <%= form.label :seats, style: "display: block" %>
    <%= form.number_field :seats %>
  </div>

  <div>
    <%= form.label :ticket_price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>



  <div>
    <%= form.submit %>
  </div>
<% end %>
