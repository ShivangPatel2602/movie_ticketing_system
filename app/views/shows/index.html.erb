<p style="color: green"><%= notice %></p>

<% content_for :title, "Shows" %>

<h1>Shows</h1>

<div id="shows">
  <% @shows.each do |show| %>
    <%= render show %>
    <p>
      <%= link_to "Show this show", show %> |
      <% if current_user %>
      <%= link_to "Purchase Tickets", new_movie_show_ticket_path(@movie, show)%>
      <% end %>
    </p>
  <% end %>
</div>

<%if current_admin %>
  <%= link_to "New show", new_show_path %> |
<% end %>

<%= link_to "Back to Main Menu", root_path %> |
<%= link_to "Back to Movies", movies_path %>