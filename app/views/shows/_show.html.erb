<div id="<%= dom_id show %>">
  <p>
    <strong>Movie:</strong>
    <%= show.movie.title %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= show.date %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= show.time.strftime("%I:%M %p") %>

  </p>

  <p>
    <strong>Seats:</strong>
    <%= show.seats %>
  </p>

  <p>
    <strong>Available Seats:</strong>
    <%= show.available_seats %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= show.price %>
  </p>

</div>
