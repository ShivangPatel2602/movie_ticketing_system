<p id="alert"><%= alert %></p>
<h2>Admin Login</h2>
<%= form_tag admin_sessions_path do |form| %>
  <div class="field">
    <%= label_tag :email_address %>
    <%= text_field_tag :email_address %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
